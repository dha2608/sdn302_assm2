<%- include('../partials/header') %>

<h1>Create New Question</h1>
<hr>

<form method="POST" action="/questions">
    <div class="mb-3">
        <label for="text" class="form-label">Question Text:</label>
        <input type="text" class="form-control" id="text" name="text" required>
    </div>
    
    <div class="mb-3">
        <label for="options" class="form-label">Options (comma-separated):</label>
        <input type="text" class="form-control" id="options" name="options" placeholder="Option 1, Option 2, Option 3" required>
    </div>
    
    <div class="mb-3">
        <label for="correctAnswerIndex" class="form-label">Correct Answer Index:</label>
        <input type="number" class="form-control" id="correctAnswerIndex" name="correctAnswerIndex" placeholder="Bắt đầu từ 0" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/questions" class="btn btn-secondary">Cancel</a>
</form>

<%- include('../partials/footer') %>